{
  "name": "typescript-starter",
  "version": "0.0.1",
  "description": "typescript boilerplate project",
  "main": "dist/index.js",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts' 'src/**/*.tsx'",
    "build": "npm run cleanup && tsc -p tsconfig.build.json",
    "test": "jest",
    "test-watch": "npm t -- --watch",
    "coverage": "npm t -- --coverage",
    "prepublishOnly": "npm run lint && npm t && npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-sevenval": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  }
}
