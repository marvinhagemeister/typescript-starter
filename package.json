{
  "name": "typescript-starter",
  "version": "0.0.1",
  "description": "typescript boilerplate project",
  "main": "dist/index.js",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts'",
    "watch": "tsc -w",
    "build": "npm run clean && tsc && node scripts/prepare-typings.js",
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "prepublishOnly": "npm run lint && npm t && npm run build",
    "precommit": "./scripts/pre-commit.sh"
  },
  "dependencies": {
    "@types/mri": "^1.1.0",
    "chokidar": "^2.0.4",
    "fast-deep-equal": "^2.0.1",
    "kleur": "^3.0.0",
    "mri": "^1.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chokidar": "^1.7.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "husky": "^0.13.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  }
}
