{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "internalConsole",
      "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "${relativeFile}",
        "--colors",
        "--timeout=9999",
        "--compilers",
        "ts:ts-node/register"
      ],
      "runtimeExecutable": null,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "internalConsole",
      "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"]
    }
  ]
}
